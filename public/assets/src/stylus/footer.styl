.site-footer
  display: block
  padding: 2rem 1rem
  background-color: colore-loppure
  color: #fff
  font-size: 0.9rem

  &> *
    display: table-cell
    vertical-align: middle

  .content-footer
    max-width: 1200px
    display: block
    margin: 0 auto

    @media (max-width: max)
      width: 100%

  a
    color: grigio-intermedio
    border-bottom: .1rem solid colore-loppure

    &:hover
      color: grigio-intermedio
      border-bottom: .1rem solid grigio-intermedio

  p
    margin: 0 auto
    display: block
    font-size: 0.9rem
    color: #fff

  span
    font-size: 1.1rem

  .footer-documenti
    text-align: right

  .footer-contatti
    text-align: left

  .footer-liste
    span
      font-size: 1.1rem
      float: right
      clear: both

      @media (max-width: smartphone)
        display: block
        margin: 0 auto
        float: none

    ul
      margin-right: -0.6rem
      margin-bottom: 1rem
      float: right
      clear: both

      @media (max-width: smartphone)
        float: none
        clear: both
        margin: 0 auto
        margin-bottom: 1rem
        display: inline-block
        text-align: center

    li
      float: right
      margin: 0rem .6rem
      font-size: 0.8rem
      list-style-type: disc
      text-align: right

      @media (max-width: smartphone)
        float: left
        text-align: center

/*col footer -footer */
.col-footer-4
  width: 24.5%
  float: left
  padding: 1.5rem 1rem
  border-right: .12rem solid grigio-scuro

  &:last-child
    border: none

  @media (max-width: medium)
    width: 50%
    padding: 0.5rem 1rem
    border: none

    &:nth-child(odd)
      text-align: right
      clear: left
      padding-right: 2rem
      border-right: .12rem solid grigio-scuro

    &:nth-child(even)
      text-align: left
      padding-left: 2rem

  @media (max-width: smartphone)
    width: 100%
    display: block
    margin: 0 auto
    padding: 1.5rem 1rem
    float: none
    clear: none
    text-align: center
    border: none
    border-bottom: .12rem solid grigio-scuro

    &:nth-child(odd)
      text-align: center
      clear: none
      padding: 1.5rem 1rem
      border-right: none

    &:nth-child(even)
      text-align: center
      padding: 1.5rem 1rem

    &:last-child
      border: none

/*social - footer*/
.footer-social
  height: 40px
  width: 40px
  background-color: #F4F4F4
  border-radius: 50%
  background-repeat: no-repeat
  background-size: 65%
  background-position: center

  .list-social
    width: 40px
    height: 40px
    display: inline-block
    margin: 0 5px
    background-color: #F4F4F4
    border-radius: 30px

  .footer-social
    width: 100%
    height: 100%

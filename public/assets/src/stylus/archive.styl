// Archive - Categoria: header
header.header-category
  height: 250px
  overflow: hidden
  background-color: colore-loppure

  h1
    text-align: center
    color: bianco
    font-size: 20px
    margin: 0 auto

    &::before
      width:100px
      height: 100px
      content: ' '
      display: block
      margin: 10px auto
      margin-top: 50px;
      border-radius: 50%
      background-color: bianco
      background-size: 40px
      background-repeat: no-repeat
      background-position: center

  .info
    display: inline-block
    float: right
    padding: 5px 7px
    border 2px solid bianco
    border-radius: 10px
    font-size: 16px
    color: bianco

    &::before
      width: 15px
      height: 15px
      content: ' '
      display: block
      margin: 5px auto
      margin-right: 10px
      float: left
      background-color: bianco

    &:visited
      color: colore-loppure

    &:hover, &:focus, &:active
      color: colore-loppure
      background-color: bianco

      &::before
        background-color: colore-loppure



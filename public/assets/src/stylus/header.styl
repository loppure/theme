// temporaneo
form#searchform
  display: none

/*header site - header*/
.site-header
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 50px
  background: #F7F7F7
  border-bottom: 4px solid #DDDDDD
  transition: transform 0.3s ease, height 0.2s ease-out
  z-index: 9
  overflow: visible

  *
    overflow: visible

  .headroom--not-top
    height: 50px

    .menu-toggle
      // non serve copia-incollare i valori sempre in questo modo width ed
      // height di .menu-toggle erediteranno la height da .headroom--not-top
      width: @height
      height: @height

    .main-navigation a
      line-height: 50px

    .cerchio-logo
      width: 150px
      height: @width
      top: -77px

      @media (max-width: 719px)
        left: 22%;

      @media (max-width: 599px)
        left: 8%;

      @media (max-width: 519px)
        left: -10.5%;

      @media (max-width: 349px)
        left: -11.5%;

      img
        height: 55px
        top: 60px

  .cerchio-logo
    width: 163px
    height: 163px
    position: relative
    background: #F7F7F7
    border: 4px solid #DDDDDD
    border-radius: 50%
    top: -65px
    left: 2px

  .nascondi-cerchio
    width: 200px
    height: 100%
    background: #F7F7F7
    position: absolute
    z-index: 9

    @media (max-width: 519px)
      margin-left: -3%

  .slide--up
    @media (max-width: 519px)
      transform: translateY(-180%)

  .header-wrapper
    width: 95%
    max-width: 960px
    margin: 0 auto
    height: 100%

  .site-branding
    width: 30%
    float: left
    margin: 0 auto
    height: 100%

    img
      height: 76px
      margin: 19px auto
      display: block
      position: relative
      z-index: 99
      top: 48px

/*header di page-gray - header*/

.img-header
  height: 291px
  background-color: #F7F7F7
  margin-top: 40px
  background-position: center
  background-size: cover
  background-repeat: no-repeat


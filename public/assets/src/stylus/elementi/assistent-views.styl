//Views Assistant
.views-assistent
  display: none //rimuovere
  width: 100%
  height: 100%
  position: fixed
  top: 0
  left: 0
  background-color: rgba(0,0,0,0.8)
  z-index: 99

  article
    width: 75%
    height: 75%
    position: absolute
    top: 15%
    left: 15%
    background-color: bianco
    border: 1px solid colore-loppure

    .close
      width: 30px
      height: 30px
      display: block
      float: right
      clear: right
      border-radius: 50%
      border: 1px solid colore-loppure
      background-color: bianco

    header
      height: 100px
      background-color: red

      .content-foto-assistant
        max-width: 100%;
        display: block
        height: auto
        float: left

        img
          width: 70px
          height: 70px
          float: left
          clear: left
          background-color: bianco

        h6
          float: left
          clear: left
          margin: 5px auto
          color: bianco

      .help-assistant
        width: 100px
        height: 50px
        border: 1px solid bianco
        float: right
        clear: right

  .col-assistant
    width: 24%
    height: 100px
    margin: 0 0.5%
    float: left
    background: green

  footer
    width: 100%
    height: auto
    clear: both
    background-color: blue

.slide-home
  height: 350px
  margin: 0
  padding: 0
  overflow: hidden
  position: relative

  h3
    margin: 120px auto
    position: relative
    z-index: 5
    text-align: center
    font-size: 50px
    font-weight: 800
    color: #fff


  figure
    width: 100%
    height: 350px
    position: absolute
    top: 0; left: 0
    z-index: 3
    animation: slideshow 20s linear 0s infinite
    background-size: cover
    background-position: center
    background-repeat: no-repea

    &:nth-child(2)
      z-index: 2
      animation: slideshow 20s linear 7s infinite

    &:nth-child(3)
      z-index: 1
      animation: slideshow 20s linear 13s infinite

@keyframes slideshow {
   25% { opacity: 1;}
   33.33% { opacity: 0;}
   91.66% { opacity: 0;}
   100% { opacity: 1;}
}

//slider - home

.slide-home ul li .section-blur
  width: 100%
  min-height: 550px
  height: auto
  overflow: hidden
  display: block
  filter: blur(2px)
  position: absolute
  z-index: -99
  background-size: 120%
  background-repeat: no-repeat
  background-position: center

.slide-home ul li .radian-blur
  width: 100%
  min-height: 550px
  height: auto
  overflow: hidden
  display: block
  background-image: radial-gradient( ellipse at center, rgba(255,255,255,0) 50%, rgba(255,255,255,0.7) 100% )



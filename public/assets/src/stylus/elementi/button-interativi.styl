.scroll_up
  background: green;
  width: 40px;
  height: 40px;
  display: block
  margin: 0 auto
  position: fixed;
  bottom: 10px;
  right: 20px;
  border-radius: 50%
  border: 3px solid colore-loppure
  background-color: bianco
  background-position: center
  background-repeat: no-repeat
  background-size: 80%

.content-assistant
  width: 100px
  height: 150px
  display: block
  margin: 0 auto
  padding: 5px
  padding-top: 0
  position: fixed
  bottom: 10px
  left: 20px
  background-color: bianco
  border: 1px solid colore-loppure

  .assistant
    width: 70px
    height: 70px
    display: block
    margin: 0 auto
    background-color: red
    border-radius: 50%

  h6
    padding: 0
    margin: 0
    margin-top: 10px
    font-size: 14px
    text-align: center
    border-top: 1px solid colore-loppure

  span
    display: block
    margin: 0 auto
    padding: 0
    font-size: 12px
    text-align: center

  .novita
    background-color: colore-loppure
    padding: 2px 1px
    margin-bottom: 10px
    color: bianco

//Views Assistant
.views-assistent
  width: 100%
  height: 100%
  position: fixed
  top: 0
  left: 0
  background-color: rgba(0,0,0,0.8)
  z-index: 99

  article
    width: 75%
    height: 75%
    position: absolute
    top: 15%
    left: 15%
    background-color: bianco
    border: 1px solid colore-loppure

//Slideshow - citta

.container-slider-citta
  width: auto
  height: 350px
  overflow: hidden
  display: block
  margin: 0 auto
  margin-top: 50px
  background: red

  .slider
    height: 350px
    width: 100%
    display: block
    overflow: hidden
    margin: 0 auto
    padding: 0

    ul
      margin: 0
      padding: 0
      position: relative

      li
        width: 100%
        height: 350px
        position: absolute
        top: -350px
        list-style: none

        figure
          width: 70%
          height: 350px
          display: block
          overflow: hidden
          margin: 0 auto
          float: left
          background-repeat: no-repeat
          background-position: center
          background-size: cover

          &::after
            width: 50px
            height: 50px
            display: block
            margin: 40px
            float: left
            content: ' '
            background: red


        .text-slide
          width: 30%
          display: block
          margin: 0 auto
          float: right




        h4
          display: block
          margin: 0 auto
          margin-top: 50px
          text-align: center
          font-size: 25px
          color:bianco

        p
          width: 80%
          display: block
          margin: 0 auto
          font-size: 17px
          float: none
          color: bianco

.container-slider-citta li:nth-child(1)
	-moz-animation:cycle 25s linear infinite
	-webkit-animation:cycle 25s linear infinite

.container-slider-citta li:nth-child(2)
	-moz-animation:cycletwo 25s linear infinite
	-webkit-animation:cycletwo 25s linear infinite

.container-slider-citta li:nth-child(3)
	-moz-animation:cyclethree 25s linear infinite
	-webkit-animation:cyclethree 25s linear infinite

.container-slider-citta li:nth-child(4)
	-moz-animation:cyclefour 25s linear infinite
	-webkit-animation:cyclefour 25s linear infinite

.container-slider-citta li:nth-child(5)
	-moz-animation:cyclefive 25s linear infinite
	-webkit-animation:cyclefive 25s linear infinite

//PROGRESS BAR
.progress-bar{
	width: 100%;
	height: 5px;
  position: absolute;
  top: 550px;
	background:#000;
	-moz-animation:fullexpand 25s ease-out infinite;
	-webkit-animation:fullexpand 25s ease-out infinite;
}


.container-slider-citta .slider:hover li,
.container-slider-citta .slider:hover .progress-bar{
	-moz-animation-play-state:paused;
	-webkit-animation-play-state:paused;
}



/* ovarlay - elementi*/

.seq
  position: fixed
  overflow: scroll
  width: 100%
  height: 100%
  background-color: rgba(244, 244, 244, 0.8)
  top: 0
  z-index: 999999

  @media (max-width: 719px)
    background-color: rgba(244, 244, 244, 0.9)

  @media (max-width: 519px)
    background-color: #F4F4F4

  span.x
    width: 40px
    height: 40px
    position: absolute
    top: 20px
    right: 20px
    border: 2px solid rgba(0, 0, 0, 0.5)
    border-radius: 50%
    cursor: pointer
    background-size: 70%
    background-repeat: no-repeat
    background-position: center
    background-image: url("img/svg/close.svg")

    @media (max-width: 959px)
      top: 10px;
      right: 10px;

  .seq-canvas
    position: absolute
    width: 80%
    overflow: hidden
    height: auto
    background: #F4F4F4
    top: 15%
    left: 10%
    margin-bottom: 20px
    -webkit-box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.3)
    -moz-box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.3)
    box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.3)

    @media (max-width: 959px)
      width: 90%
      top: 15%
      left: 5%

    @media (max-width: 799px)
      width: 95%
      top: 10%
      left: 2.5%

    @media (max-width: 719px)
      width: 90%
      top: 10%
      left: 5%

    @media (max-width: 519px)
      width: 100%
      top: 10%
      left: 0
      padding: 0 10px
      -webkit-box-shadow: none
      -moz-box-shadow: none
      box-shadow: none

    header
      clear: both
      height: auto
      overflow: hidden
      margin-bottom: 10px

      h2
        margin: 0
        font-size: 18px

      time
        float: left
        font-size: 16px
        color: rgba(0, 0, 0, 0.5)

    li
      height: auto
      overflow: hidden
      padding: 20px 10px

      .image
        height: 400px
        width: 60%
        float: left

        @media (max-width: 799px)
          height: 450px

        @media (max-width: 719px)
          margin-bottom: 30px
          width: 100%
          float: none
          clear: both
          height: 300px

        @media (max-width: 519px)
          height: 250px;

        @media (max-width: 349px)
          height: 200px

    .pseudo-image
      height: 100%
      width: 100%
      background-position: center
      background-size: cover
      background-repeat: no-repeat

    article.body
      width: 40%
      float: right
      padding: 0 30px

      @media (max-width: 719px)
        width: 100%
        float: none
        clear: both

      p
        font-size: 14.7px
        text-align: justify

      .author
        clear: both
        height: auto
        overflow: hidden
        margin-top: 28px

        .avatar
          width: 50px
          height: 50px
          float: left
          padding: 2px
          border: 2px solid #DDDDDD
          border-radius: 50%

        p
          float: left
          line-height: 50px
          margin-left: 7px
          font-size: 18px

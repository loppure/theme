//Elementi -> card -> Post standard
.card-post-standard
  width: 350px
  height: 350px
  overflow: hidden
  display: block
  margin: 0 auto
  margin-bottom: 20px
  color: bianco
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  box-shadow: 2px 2px 3px 0px rgba(0,0,0,0.3)

  @media (max-width: fat-phone)
    width: 350px
    height: 350px

  @media (max-width: min)
    width: 300px
    height: 300px
    margin-bottom: 20px

  header
    height: auto
    overflow: hidden
    padding: 0
    padding-bottom: 0
    text-align: center

    a, & a:visited, & a:hover, & a:focus, & a:active
      color: bianco

    .text-name-rubrica
      float: none
      display: inline-block

      a, & a:visited, & a:hover, & a:focus, & a:active
        color: bianco
        font-size: 16px
        font-weight: 700
        text-shadow: 2px 2px 1px rgba(0,0,0,0.6)

      &::before
        width: 40px
        height: 40px
        content: ' '
        display: block
        margin: 0 auto
        margin-bottom: 5px
        border: 2px solid bianco
        border-radius: 50%
        background-size: 80%
        background-position: center
        background-repeat: none

    ul.lista-citta
      height: 30px
      text-align: center
      border-top: 1px solid bianco

      li
        display: inline-block
        margin: 3px

        a
          text-shadow: 2px 2px 1px rgba(0,0,0,0.6)

  .sfondo
    max-width: 100%
    width: auto
    max-height: 100%
    height: 100%
    padding: 10px
    display: block
    background-image: radial-gradient( ellipse at center, rgba(64,72,76,0.25) 0%, rgba(64,72,76,1) 100% )

    .content-text
      max-width: 90%
      height: 175px
      overflow: hidden
      display: block
      float: none
      margin: 0 auto
      margin-top: 5px
      background: none

      h4, & a
        margin: 0
        color: bianco
        font-size: 30px
        line-height: 34px
        text-align: center
        font-weight: 700
        text-shadow: 2px 2px 1px rgba(0, 0, 0, 0.6);

    .card-footer
      margin: 0 auto
      height: 50px
      display: block
      text-align: center


/* taxonomy -> Citta - Header*/
.header-taxonomy-citta
  height: auto
  overflow: hidden
  padding: 0
  margin: 0 auto
  background-color: colore-loppure

  .img-header
    height: 350px
    overflow: hidden
    padding: 0
    margin: 0
    background-color: red

    h1
      font-size: 35px
      margin: 20px
      margin-top: 270px
      margin-bottom: 0
      float: left
      color: colore-loppure

      &:before
        width: 40px
        height: 40px
        content: ' '
        display: block
        margin-right: 20px
        float: left
        background-color: bianco


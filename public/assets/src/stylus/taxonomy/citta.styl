/* taxonomy -> Citta - Header*/
.header-taxonomy-citta
  height: auto
  overflow: hidden
  padding: 0
  margin: 0 auto
  background-color: colore-loppure

  .img-header
    height: 350px
    overflow: hidden
    padding: 0
    margin: 0
    background-color: grigio-chiaro
    background-size: 100%
    border-bottom: 1px solid colore-loppure

    @media (max-width: tablet)
      height: 320px

    @media (max-width: medium)
      height: 280px

    @media (max-width: mini-tablet)
      height: 240px
      border: none

    @media (max-width: smartphone)
      height: 200px
      background-size: 105%

    @media (max-width: min-smartphone)
      height: 170px
      background-size: 110%

    @media (max-width: min)
      height: 150px
      background-size: 115%

    h1
      margin: 0 auto
      margin-top: 285px
      margin-bottom: 0
      float: none
      font-size: 35px
      font-weight: 700
      text-align: center
      color: colore-loppure

      @media (max-width: tablet)
        margin-top: 255px

      @media (max-width: medium)
        margin-top: 220px

      @media (max-width: mini-tablet)
        margin-top: 185px

      @media (max-width: smartphone)
        margin-top: 150px

      @media (max-width: min-smartphone)
        margin-top: 135px
        font-size: 30px

      @media (max-width: min)
        margin-top: 110px


// Widget - lista
.widget-item
  padding: 20px 0 30px

  ul
    margin-top: 20px
    border-top: 0.125rem solid colore-loppure

// Widget - lista: item
  .item
    width: 48%
    height: 40px
    display: inline-block
    margin: 5px auto
    text-align: center
    background-color: bianco

    &::after
      height: 20px
      width: 20px
      margin: 10px;
      content: " "
      display: inline-block
      float: left
      border-radius: 50%
      background-color: colore-loppure

    a
      display: inline-block
      padding: 12px 0
      text-decoration: none
      color: colore-loppure

// Widget - lista: item Hover
  li.item:hover
    background-color: colore-loppure

    &::after
      background-color: bianco

    a
      color: bianco



// Widget text
.widget-text
  width: auto
  padding: 20px 0 30px
  background-color: bianco
  border: 0.08rem solid grigio-intermedio

// Widget image
.widget-image
  width: auto
  padding: 10px 0 20px
  background-color: bianco
  border: 0.08rem solid grigio-intermedio

  h3
    margin: 20px auto
    margin-top: 0
    padding: 0
    font-size: 15px
    text-align: center

  img
    width: 50%
    height: auto
    display: block
    margin: 0 auto

//Widget-altro - città
.widget-altro
  height: auto
  overflow: hidden
  background-color: bianco

  li.item
    width: auto
    height: auto
    margin: 5px 15px
    display: inline-block
    float: left
    text-align: left
    background: none

    &:hover
      color: colore-loppure
      background: colore-loppure

      a
        text-decoration: underline
        color: colore-loppure

        &::before
          background: colore-loppure

    a::before
      height: 10px
      width: 10px
      margin: 15px 30px
      content: " ";
      display: inline-block;
      float: left;
      border-radius: 50%;
      background-color: #40484c;



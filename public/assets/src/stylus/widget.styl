/*Single - Social*/
.widget-share-social
  width: 120px
  float: left
  margin-top: 20px
  text-align: center

  ul
    text-align: center

  .item-social
    width: 40px
    height: 40px
    display: inline-block
    margin: 7px

    background-color: red

/* Widget - lista Timeline */
.timeline
  .archive-item
    width: auto
    display: block

/* Widget - lista Categoria */
.categorie

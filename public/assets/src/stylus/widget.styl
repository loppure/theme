// Widget - lista
.widget-item
  padding: 20px 0 30px

  ul
    margin-top: 20px
    border-top: 0.125rem solid colore-loppure

// Widget - lista
  .item
    width: 48%
    height: 40px
    display: inline-block
    margin: 5px auto
    text-align: center
    background-color: bianco

    a
      display: block
      padding: 0
      margin: 0
      line-height: 40px
      float: left
      text-decoration: none
      color: colore-loppure

      &::before
        height: 20px
        width: 20px
        margin: 10px
        margin-right: 20px
        content: " "
        display: inline-block
        float: left
        border-radius: 50%
        background-color: colore-loppure


    &:hover a
      color: bianco

      &::before
        background-color: bianco




// Widget - lista: item Hover
  li.item:hover
    background-color: colore-loppure

    &::after
      background-color: bianco

    a
      color: bianco


// Widget Social - lista
.widget-share-social
  width: 120px
  float: left
  margin-top: 20px
  text-align: center

  ul
    text-align: center

  .item-social
    width: 27px
    height: 27px
    display: inline-block
    padding: 10px
    margin: 3px
    border 2px solid grigio-chiaro
    border-radius: 50%

    &:hover
      border-color: colore-loppure

// widget - timeline
.timeline
  .archive-item
    width: auto
    display: block

// widget lista - Categorie
.list-categorie
  .item
    width: auto
    height: 50px;
    display: block
    padding: 7px
    border: 5px solid colore-loppure
    background-color: colore-loppure

    &:after
      display: none


    a
      margin: 5px auto
      padding: 0
      float: left
      font-size: 18px
      line-height: 40px
      color: bianco

      &::before
        width: 40px
        height: 40px
        content:' '
        display: block
        margin: 0 auto
        margin-right: 20px
        float: left
        border-radius: 0
        background: none
        background-position: center
        background-size: contain
        background-repeat: no-repeat

    &:hover
      background-color: bianco

      a
        color: colore-loppure


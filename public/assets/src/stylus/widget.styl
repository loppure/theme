// Widget - lista
.widget-item
  padding: 20px 0 30px

  ul
    margin-top: 20px
    border-top: 0.125rem solid colore-loppure

  // Widget - lista
  .item
    width: 48%
    height: 40px
    overflow: hidden
    display: inline-block
    margin: 5px auto
    padding: 5px 2px
    text-align: center
    background-color: bianco

    a
      display: block
      padding: 0
      margin: 0
      line-height: 40px
      float: left
      text-decoration: none
      color: colore-loppure

      @media (max-width: min-smartphone)
        float: none
        text-align: center
        font-size: 18px

      &::before
        height: 20px
        width: 20px
        margin: 10px
        margin-right: 10px
        content: " "
        display: block
        float: left
        border-radius: 50%
        background-color: colore-loppure

        @media (max-width: min-smartphone)
          display: none


    &:hover a
      color: bianco

      &::before
        background-color: bianco




  // Widget - lista: item Hover
  li.item:hover
    background-color: colore-loppure

    &::after
      background-color: bianco

    a
      color: bianco


// Widget Social - lista
.widget-share-social
  width: 120px
  float: left
  margin-top: 20px
  text-align: center

  @media (max-width: mini-tablet)
    display: none

  ul
    text-align: center

  .item-social
    width: 27px
    height: 27px
    display: inline-block
    padding: 10px
    margin: 3px
    border 2px solid grigio-chiaro
    border-radius: 50%

    &:hover
      border-color: colore-loppure

// widget - timeline
.timeline
  display: block
  height: auto
  overflow: hidden
  margin: 0 auto
  text-align: center

  .archive-item
    width: 100%
    display: inline-block
    margin 5px auto
    font-size: 18px


    @media (max-width: mini-tablet)
      width: auto
      min-width: 150px
      height: 40px
      margin: 5px
      padding: 7px 5px;
      padding-right: 10px

    @media (max-width: min-smartphone)
      width: 100%
      text-align: center



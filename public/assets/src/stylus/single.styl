/*Single - Content text - content-fonti*/

.content-fonti
  padding-top: 20px;
  border-top: 2px solid colore-loppure
  color: colore-loppure

  span
    display: block
    margin: 10px auto
    clear: left
    line-height: 25px
    font-size: 14px

    &::before
      width: 25px
      height: 25px
      display: block
      margin 0 auto
      margin-right: 10px
      content: ' '
      float: left

    &:nth-child(2)::before
      background-image: url(../../src/img/icone-generiche/icona-foto-fonte-nera.svg)
      background-size: 80%
      background-repeat: no-repeat
      background-position: center

    &:nth-child(3)::before
      background-image: url(../../src/img/icone-generiche/icona-docuemnti-nera.svg)
      background-size: 80%
      background-repeat: no-repeat
      background-position: center


//Single - commenti
.comments-area
  width: 700px
  height: auto
  display: block
  overflow: hidden
  margin: 30px auto
  padding: 30px 0;

  @media (max-width: medium)
    width: 80%

  @media (max-width: smartphone)
    width: 100%

  .show-hide-img
    width: 50px
    height: 50px
    display: block
    margin: 0 auto
    border: 3px solid colore-loppure
    border-radius: 50%

  .comments-show-hide
    background: none

  //contenitore wrapper
  .comments-wrapper
    padding: 15px
    border: 1px solid colore-loppure
    background-color: bianco

    //Elemento di chiusura dei commenti
    .close_comments
      width: 25px
      height: 25px
      display: block
      float: left
      border-radius: 50%
      background-image: url("../../src/img/icone-generiche/close-nero.svg")
      background-repeat: no-repeat
      background-position: center
      background-size: 60%

      &:visited
        background-image: url("../../src/img/icone-generiche/close-nero.svg")

      &:hover, &:active, &:focus
        background-image: url("../../src/img/icone-generiche/close-bianco.svg")


    //Contenitore commento
    .comment-content
      max-width: 500px
      height: auto
      overflow: hidden
      display: block
      clear: both
      margin: 0 auto
      padding: 10px 17px
      font-size: 14px
      background-color: grigio-intermedio
      border-radius: 20px

      @media (max-width: smartphone)
        max-width: 100%
        width: 100%

      header
        height: auto
        display: block
        margin: 0 auto
        padding: 0;
        clear: left
        color: colore-loppure

        h3
          margin: 0 auto
          padding: 0
          font-size: 15px

      .comment-body p
        font-size: 13px
        color: colore-loppure

      .rispondi button
        background: none
        border: 1px solid colore-loppure

        &:hover
          background-color: colore-loppure
          border: 1px solid colore-loppure
          color: #fff

  form
    height: auto
    overflow: hidden
    display: block
    margin: 20px auto

    p
      margin: 0
      padding: 0

    input
      width: 400px
      display: block
      margin: 10px auto
      padding: 3px 5px
      font-size: 16px
      border: 2px solid colore-loppure
      border-radius: 5px
      color: #000
      outline: none

      @media (max-width: smartphone)
        width: 90%


    .form-submit
      text-align: center

      input.submit
        width: auto
        height: auto
        display: inline-block

    textarea
      width: 400px
      max-width: 90%
      height: 100px
      display: block
      margin: 10px auto
      padding: 3px 5px
      font-size: 14px
      border: 2px solid colore-loppure
      border-radius: 10px
      color: #000

      @media (max-width: smartphone)
        width: 90%

    .comment-notes
      width: 300px
      display: block
      margin: 0 auto
      font-size: 12.5px
      text-align: center

      @media (max-width: min)
        width: 90%




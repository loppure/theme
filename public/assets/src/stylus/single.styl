//Single - header
.single-header
  width: 100%
  height: auto
  overflow: hidden
  display: block
  float: none
  margin: 0 auto
  padding: 0

  @media (max-width: mini-tablet)
    padding-top: 0

  .content-title
    width: 100%
    height: auto
    overflow: hidden
    float: right
    padding: 10px 0
    margin: 0 auto
    color: bianco
    background-color: colore-loppure

    @media (max-width: mini-tablet)
      padding-top: 100px

    @media (max-width: min-smartphone)
      padding-top: 80px

    &::before
      width: 50px
      height: 50px
      display: block
      content: ' '
      float: left
      margin: 15px
      background-size: contain
      background-repeat: no-repeat
      background-position: center

      @media (max-width: min-smartphone)
        float: none
        margin: 0 auto

    h1
      min-height: 50px
      max-width: 80%
      margin 15px 10px 15px 0
      padding-left: 15px
      float: left
      font-size: 25px
      line-height: 26px
      color: bianco 25px
      line-height: 26px
      color: bianco
      font-weight: 400
      border-left: 2px solid biancopost
      font-weight: 400
      border-left: 2px solid bianco

      @media (max-width: medium)
        max-width: 75%

      @media (max-width: min-smartphone)
        width: 95%
        max-width: 90%
        height: auto
        margin: 0 auto
        margin-bottom: 15px;
        float: none
        text-align: center
        border: none




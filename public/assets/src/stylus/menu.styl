//Menu -> menu classico
.main-navigation.menu-classic
  height: 100%

  .menu-menu-container li:last-child,
  .button-control-navigation
    display: none

    @media (max-width: fat-phone)
      display: inline-block


  & a, & button
    float: left

  .menu-menu-container
    @media (max-width: fat-phone)
      display: none
      position: absolute
      width: 30%
      top: 70px
      right: 0
      background: bianco

  &.toggle .menu-menu-container
    display: block



//Menu -> Controll navigation menu
.control-navigation-menu

  ul
    float: right

    li
      float: left

    li.iscriviti,
    li.esplora
      @media (max-width: fat-phone)
        display: none


  .menu-toggle
    display: none

    @media (max-width: fat-phone)
      display: block

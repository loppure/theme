/*menu*/
.main-navigation
  height: 100%

  @media (max-width: 599px)
    float: right
    height: 100%

  .menu-toggle
    display: none

    @media (max-width: 599px)
      display: block
      padding: 0 0 0 0
      width: 40px
      height: 40px
      margin-top: 5px
      background-color: transparent
      background-position: center
      background-size: 60%
      background-repeat: no-repeat
      border: 2px solid #000
      border-radius: 50%
      background-image: url("img/svg/icon-menu.svg") /*rivedere*/

  .menu-menu-container
    max-width: 65%
    height: 100%
    float: right

    ul
      height: auto
      overflow: hidden
      text-align: center

      @media (max-width: 599px)
        display: none;

      li
        display: inline-block
        margin: 0 5px

        a
          display: inline-block
          padding: 15px 10px
          text-decoration: none

          &:hover, &:focus, &:active
            color: bianco
            background-color: colore-loppure
            text-decoration: none

//Menu -> menu classico
.main-navigation.menu-classic
  height: 100%

  & a, & button
    float: left

  @media (max-width: smartphone)
    float: right
    height: 100%

  .menu-toggle
    display: none

    @media (max-width: smartphone)
      display: block
      padding: 0 0 0 0
      position: absolute
      right: 50px
      width: 40px
      height: 40px
      margin-top: 5px
      background-color: transparent
      background-position: center
      background-size: 60%
      background-repeat: no-repeat
      border-radius: 50%
      background-image: url("../../src/img/icone-generiche/menu-nero.svg") /*rivedere*/
      background-size: 70%
      background-repeat: no-repeat
      background-position: center
      border: none


nav.toggle
  width: 100vh
  height: 100vh
  display: block
  background: bianco
  position: absolute
  top: 0
  left: 0
  z-index: 99999

  .menu-toggle
    background-image: url("../../src/img/icone-generiche/close-nero.svg")
    background-size: 80%
    position: absolute
    top: 0
    right: 150px


  .menu-menu-container
    max-width: 100%
    float: none
    margin: 0 auto


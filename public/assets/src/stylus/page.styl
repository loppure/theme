/*Page - Home*/
.widget-sx
  col(2)

.section-cont-article
  col(6)

.widget-dx
  col(4)

.home-section
  margin-top: 0px

.home-header
  height: auto
  overflow: hidden
  background-color: grigio-chiaro
  border-bottom: 2px solid colore-loppure

.barra-nome-pagina
  clear: both

/*Page - Nessun Post*/

.no-results
  width: 250px
  height: 200px
  padding: 20px 20px
  margin: 20px auto
  display: block
  text-align: center

  h1
    font-size: 1.5rem
    margin-bottom: 10px

    &::before
      width: 50px
      height: 50px
      content: ""
      margin: 0 auto
      margin-bottom: 10px
      display: block
      background-color: red

  p
    text-align: center
    font-size: 1rem

body
  font-family: "robotoregular", "arial", "sans-serif"
  color: #000
  font-size: 1em
  line-height: 1.5


h1, h2, h3, h4, h5, h6
  font-size: 1em
  line-height: 1.2
  margin: 0 0 0.75em

p
  margin: 0 0 0.75em

a
  color: rgba(0, 0, 0, 0.5)
  text-decoration: none
  transition: color 0.1s linear

a:active, a:focus, a:hover
  color: #1d2122

a:active, a:focus
  outline: none

ul
  list-style-type: disc

/* titoli articoli */
.title-article-post h3 a
  font-family: "gentium_basicbold", "georgia", serif
  font-weight: bold
  letter-spacing: 0.2px
  font-size: 16px
  color: #000

  &:hover
    color: #000

.post .entry-header h1
  font-family: "gentium_basicregular", "georgia" serif
  font-weight: normal

/* testo articoli*/
.content-text .text
  font-family: "gentium_basicregular", "georgia" serif
  font-size: 17px
  text-align: justify
  color: #000

/* link articoli*/
.content-text .text a
  border-bottom: 2px solid #FFF176
  box-shadow: inset 0 -5px 0 #FFF176
  color: inherit

  &:hover
    -webkit-transition: background 0.15s cubic-bezier(0.33, 0.66, 0.66, 1)
    transition: background 0.15s cubic-bezier(0.33, 0.66, 0.66, 1)
    background-color: #FFF176

/* citazioni - articoli */
.content-text blockquote
  padding-left: 15%
  padding-top: 10px
  padding-bottom: 10px
  padding-right: 5%
  margin: 0px
  background-repeat: no-repeat
  text-indent: 23px
  background-size: 50px
  background-position: 0% 0%
  background-image: url("img/svg/citazione.svg")

/* liste articoli */
.content-text ul
  list-style-image: url(img/png/list.png)

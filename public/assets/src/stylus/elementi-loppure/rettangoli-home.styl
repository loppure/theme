.home-header nav
  display flex
  flex-direction row
  justify-content space-around
  flex-wrap wrap

// Elementi-loppure -> Rettagoli home
// Elementi-loppure -> Rettagoli home: Scheletro
.home-header .box-rettangolo-4
  display: flex;
  flex-direction row
  justify-content flex-start
  align-items center

  box-sizing border-box

  width: 24.5%
  margin: 0 0.1%
  height: 90px
  padding 5px 7px
  margin-bottom: 3px
  background-color: red
  text-decoration none
  color: bianco

  @media (max-width: smartphone)
    width: 49%
    margin-bottom: 5px

  @media (max-width: tablet)
    height: 100px

  @media (max-width: medium)
    height: 100px

  @media (max-width: mini-tablet)
    height: 100px
    margin-bottom: 5px


  .date
    margin: 10px
    float: right
    font-size: 15px
    color: grigio-intermedio
    font-family: 'Montserrat', sans-serif
    font-weight: 700

  span
    display inline-block
    width: auto
    clear: both
    margin: 10px 5px
    font-size: 18px
    color: bianco
    font-family: 'Montserrat', sans-serif
    font-weight: 400

  .img
      display: inline-block
      vertical-align: middle
      width: 35px
      height: 35px
      margin: 0
      margin-right: 10px
      padding: 0
      background-position: center
      background-repeat: no-repeat
      background-size: contain

  &.prossimamente
    display: inline-block // FIXME: we overwrite display:flex until 'prossimamente' is ready
    a
      position: relative
      top: 15px
      color: grigio-medio


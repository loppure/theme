.home-header nav
  display: block
  text-align: center


// Elementi-loppure -> Rettagoli home
// Elementi-loppure -> Rettagoli home: Scheletro
.home-header .box-rettangolo-4
  display: inline-block

  width: 23%
  margin: 2px
  height: 90px
  overflow: hidden
  padding 5px 7px
  background-color: red
  text-decoration none
  color: bianco

  @media (max-width: max)
    width: 22.5%

  @media (max-width: medium)
    width: 22%

  @media (max-width: mini-tablet)
    width: 45%

  @media (max-width: min)
    width: 90%
    margin-bottom: 5px

  &::before
    content: ' '
    display: block
    width: 35px
    height: 35px
    margin: 0
    margin-right: 10px
    padding: 0
    background-position: center
    background-repeat: no-repeat
    background-size: contain

  a
    display: block
    width: auto
    clear: both
    float: left
    margin: 10px 5px
    font-size: 18px
    line-height: 19px
    text-align: left
    color: bianco
    font-family: 'Montserrat', sans-serif
    font-weight: 700
    text-decoration: none;

.home-header .box-rettangolo-4.prossimamente

  &::before
    content: 'prossimamente'
    display: block
    width: auto
    float: left
    text-align: center


// Elementi-loppure -> Rettagoli home: colori e icone


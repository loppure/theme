.home-header nav
  display: block
  text-align: center


// Elementi-loppure -> Rettagoli home
// Elementi-loppure -> Rettagoli home: Scheletro
.home-header .box-rettangolo-4
  display: inline-block

  width: 23%
  margin: 2px
  height: 90px
  overflow: hidden
  padding 5px 7px
  background-color: red
  text-decoration none
  color: bianco

  @media (max-width: max)
    width: 22.5%

  @media (max-width: medium)
    width: 22%

  @media (max-width: mini-tablet)
    width: 45%

  @media (max-width: min-smartphone)
    width: 100%
    height: 80px
    margin: 0 auto
    display: block
    margin-bottom: 5px
    text-align: center

  &::before
    content: ' '
    display: block
    width: 45px
    height: 45px
    margin: 0
    margin-right: 10px
    padding: 0
    float: left
    background-position: center
    background-repeat: no-repeat
    background-size: 100%

    @media (max-width: min-smartphone)
      width: 55px
      height: 70px
      margin: 0 auto
      margin-top: 5px
      margin-right: 15px
      margin-left: 5px

    @media (max-width: min)
      width: 40px
      height: 70px
      margin-right: 10px

  a
    display: block
    width: auto
    float: left
    clear: both
    margin: 10px auto
    margin-top: 20px
    font-size: 21px
    line-height: 23px
    text-align: left
    color: bianco
    font-family: 'Montserrat', sans-serif
    font-weight: 700
    text-decoration: none;

    @media (max-width: medium)
      font-size: 16px
      letter-spacing: -1px
      line-height: 17px

    @media (max-width: mini-tablet)
      margin-top: 15px
      font-size: 21px
      line-height: 23px

    @media (max-width: smartphone)
      margin-top: 12px


    @media (max-width: min-smartphone)
      clear: none
      margin-top: 30px
      font-size: 23px
      line-height: 25px


    @media (max-width: min)
      font-size: 20px
      line-height: 22px

.home-header .box-rettangolo-4.prossimamente
  a
    margin-top: 25px;

    @media (max-width: min-smartphone)
      clear: left
      margin: 5px

  &::before
    content: 'prossimamente'
    display: block
    width: auto
    height: 35px
    float: left
    text-align: center



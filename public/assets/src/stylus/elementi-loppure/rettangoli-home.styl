// Elementi-loppure -> Rettagoli home: parole-nostre Hover
.home-header div:hover.parole-nostre
  background-color: bianco
  box-shadow: ombra-box-parole-nostre

  a::before
    background-image: img-parole-nostre

.home-header div:hover.parole-nostre a
  color: color-parole-nostre

  &:hover, &:active, &:focus

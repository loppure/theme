//Elementi-loppure -> Control Navigation in HOME
.control-home
  margin: 30px auto
  margin-top: 90px
  text-align: center

  .col-servizi
    width: 150px
    height: 100px
    overflow: hidden
    display: inline-block
    padding: 25px 10px
    margin: 0 20px
    background-color: rgba(255,255,255,0.5)
    border: 1px solid bianco

    h2
      font-size: 20px
      text-align: center
      color: colore-loppure

      &:before
        width: 50px
        height: 50px
        content: ' '
        display: block
        margin: 0 auto
        margin-bottom: 20px
        border: 2px solid colore-loppure

  .content-col-servizi.vissible .col-servizi
    width: auto
    height: auto
    padding: 10px 5px

    h2
      margin: 0
      padding: 0
      font-size: 16px

      &:before
        width: 20px
        height: 20px
        margin: 5px
        float: left

  //Elementi-loppure -> Control Navigation in HOME -> content-contenuto-servizi

  .contento-servizio
    display: none
    max-width: 60%
    margin: 0 auto
    float: none
    padding: 30px 0;
    background: #fff
    box-shadow: ombra-scura

    &.vissible
      display:block


//Elementi-loppure -> Control Navigation in HOME -> botton-close
.close-servizi

  width: 50px
  height: 50px
  position: relative
  float: right
  border-radius: 50%
  background: red


//Elementi-loppure -> Control Navigation in HOME -> Sezione promozione
.control-home .lista-tipi-promozione
  text-align: center

  li
    width: 200px
    height: 100px
    display: inline-block
    background-color: red
